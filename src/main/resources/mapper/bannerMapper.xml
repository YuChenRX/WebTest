<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.web2022.dao.BannerDao">
    <insert id="create" useGeneratedKeys="true" keyProperty="id">
        insert into sys_banner(image, product_id)
        values (#{model.image}, #{model.product.mid})
    </insert>

    <select id="find" resultType="com.web.web2022.model.domain.Banner">
        select id, image, product_id as "product.mid"
        from sys_banner
    </select>
</mapper>