<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.UaddressMapper">
    <resultMap id="BaseResultMap" type="com.pojo.Uaddress">
        <id     column="aid" jdbcType="INTEGER"      property="aid"/>
        <result column="aname" jdbcType="VARCHAR"    property="aname"/>
        <result column="aphone" jdbcType="VARCHAR"   property="aphone"/>
        <result column="address"  jdbcType="VARCHAR" property="address"/>
        <result column="taddress" jdbcType="VARCHAR" property="taddress"/>
        <result column="uid"  jdbcType="INTEGER"     property="uid"/>
        <result column="mor"  jdbcType="TINYINT"     property="mor"/>
        <result column="ud1" property="ud1" jdbcType="VARCHAR"/>
        <result column="ud2" property="ud2" jdbcType="VARCHAR"/>
        <result column="arecode" property="arecode" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getUaddress" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from
            uaddress where aid=#{aid}
    </select>

    <select id="getAllUaddress"  resultMap="BaseResultMap">
        select * from uaddress
        where uid=#{uid}
    </select>
    <insert id="addUaddress" parameterType="com.pojo.Uaddress">
        insert into uaddress(aname,aphone,address,taddress,uid,mor,ud1,ud2,arecode)
        values(#{aname},#{aphone},#{address},#{taddress},#{uid},#{mor},#{ud1},#{ud2},#{arecode})
    </insert>


    <!-- 根据id删除某个lie信息 -->
    <delete id="deleteUaddress" parameterType="java.lang.Integer">
        delete from uaddress
        where aid = #{aid,jdbcType=INTEGER}
    </delete>

    <!-- 根据id更新biao信息 -->
    <update id="editUaddress" parameterType="com.pojo.Uaddress">
        update uaddress
        set aname=#{aname},aphone=#{aphone},
            address=#{address},taddress=#{taddress},uid=#{uid},
            mor=#{mor},ud1=#{ud1},ud2=#{ud2},arecode=#{arecode}
        where aid = #{aid,jdbcType=INTEGER}
    </update>


    <update id="updatemor" parameterType="com.pojo.Uaddress">
        update uaddress
        set
            mor=0

    </update>
</mapper>
